<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to 'FixU', root_path, class: "btn btn-logo" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to edit_user_registration_path, class: "nav-link" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar" %> Welcome <%= current_user.full_name %> <% if current_user.fixer %> <span style="color: #FACF39;">(fixer)</span><% end %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "My appointments", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <% unless current_user.fixer %>
            <%= link_to "Become a Fixer", new_user_fixer_path(current_user), class: "nav-link" %>
          <% else %>
            <%= link_to "Stop being a fixer", user_fixer_path(current_user, current_user.fixer), method: :delete, data: { confirm: "Are you sure, #{current_user.full_name}?"}, class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <!-- <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Account", user_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li> -->
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
