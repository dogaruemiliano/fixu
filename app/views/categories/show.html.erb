<h1>Category : <%= @category.name %></h1>
  <%= link_to 'destroy', category_path(@category), method: :delete, data: {confirm: 'are you sure!'}   %>
  <h2>Problems : </h2>
  <ul>
    <%@category.problems.each do |problem| %>
    <li><%= problem.content%> <%= link_to 'Edit', edit_problem_path(problem) %> <%= link_to 'Destroy', problem_path(problem), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>
    </li>
    <%end%>
  </ul>
  <%= link_to 'Add a new problem', new_category_problem_path(@category) %>
  <br>
  <%= link_to 'Back to list', categories_path %>
