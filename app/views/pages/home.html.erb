<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center">4 clicks and get it fixed</h2>
    </div>
    <div class="col-12">
      <h3 class="text-center mt-4" style="color: grey">Fix it fast and cheap</h3>
    </div>
    <div class="col-12">
      <%= render 'shared/search' %>
    </div>
  </div>
  <div class="cards">
    <% @categories.each do |category| %>
      <div class="card-vertical">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-vertical-infos">
          <div>
            <h2><%= category.name %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
