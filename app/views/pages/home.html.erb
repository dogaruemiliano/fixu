<div class="container my-4">
  <div class="row">
    <div class="col-12">
      <%= image_tag('handyman.jpg', style: 'margin-top:16px;width:100%;')%>
    </div>
    <div class="col-12 mt-4">
      <h2 class="text-center">4 clicks and get it fixed</h2>
    </div>
    <div class="col-12 mt-4">
      <% if current_user && current_user.fixer %>
        <%= link_to 'Get started!', fixer_appointments_path(current_user.fixer), class: 'btn btn-lg' %>
      <% else %>
        <%= link_to 'Get started!', categories_path, class: 'btn btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
